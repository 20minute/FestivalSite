@model Festival.Models.Artiste
@{
    HttpCookie cookie2 = Request.Cookies["Nom"];
    HttpCookie cookie3 = Request.Cookies["Login"];
    if (cookie2 != null || cookie3 != null)
    {
        Layout = "~/Views/Shared/_Layout2.cshtml";
    }
    ViewBag.Title = "ArtisteDetail";
}

<center><h1>@Model.ArtisteNom</h1></center>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img class="img-responsive" src="@Model.Photo" />
        </div>
        <div class="col-md-6">
            <h3>Style : @Model.Style</h3>
            <h3>Nationalité : @Model.Nationality</h3>
            <h3>Description :</h3>
            <p>@Model.Comment</p>
        </div>
    </div>

</div>