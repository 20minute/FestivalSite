@model Festival.Models.FestivalFestivalier

@{
    ViewBag.Title = "Inscription";
}

<h2>Inscription</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>FestivalFestivalier</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class='row'>
            <div class='col-lg-2 '>
            </div>

            <div class='col-lg-8 col-xs-12'>
                <div class="text-center">
                    <h1>Entrez vos coordonnées</h1>
                </div>
                <br />

                <div class="row">
                    <div class='col-lg-6 '>
                        <label>Nom : </label><br />
                        <input type="text" required class="form-control" name="ControleFestivaliers.Nom">
                        @Html.ValidationMessageFor(model => model.ControleFestivaliers.Nom, "", new { @class = "text-danger" })<br /><br />
                    </div>
                    <div class='col-lg-6 '>
                        <label>Prenom : </label><br />
                        <input type="text" required class="form-control" name="ControleFestivaliers.Prenom">
                        @Html.ValidationMessageFor(model => model.ControleFestivaliers.Prenom, "", new { @class = "text-danger" })<br /><br />
                    </div>
                </div>
                <label>Date de naissance : </label><br />
                <input type="date" required class="form-control" name="ControleFestivaliers.Naissance">
                @Html.ValidationMessageFor(model => model.ControleFestivaliers.Naissance, "", new { @class = "text-danger" })<br /><br />
                <div class="row">
                    <div class='col-lg-6 '>
                        <label>e-mail : </label><br />
                        <input type="email" required class="form-control" name="ControleFestivaliers.Email">
                        @Html.ValidationMessageFor(model => model.ControleFestivaliers.Email, "", new { @class = "text-danger" })<br /><br />
                    </div>
                    <div class='col-lg-6 '>
                        <label>Entrez de nouveau votre e-mail : </label><br />
                        <input type="email" required class="form-control" name="ControleFestivaliers.Emailv"><br /><br />
                        @Html.ValidationMessageFor(model => model.ControleFestivaliers.Emailv, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    <div class='col-lg-6 '>
                        <label>Mot de passe : </label><br />
                        <input type="password" required class="form-control" name="ControleFestivaliers.Mdp">
                        @Html.ValidationMessageFor(model => model.ControleFestivaliers.Mdp, "", new { @class = "text-danger" })<br /><br />
                    </div>
                    <div class='col-lg-6 '>
                        <label>Entrez de nouveau votre mot de passe : </label><br />
                        <input type="password" required class="form-control" name="ControleFestivaliers.Mdpv"><br /><br />
                        @Html.ValidationMessageFor(model => model.ControleFestivaliers.Mdpv, "", new { @class = "text-danger" })

                    </div>
                </div>

                <div class='row'>
                    <div class='col-lg-2 '>
                        <label>Homme : </label><br />
                        <input type="radio" Value="Homme" name="ControleFestivaliers.Genre"><br /><br />
                    </div>
                    <div class='col-lg-2 '>
                        <label>Femme : </label><br />
                        <input type="radio" Value="Femme" name="ControleFestivaliers.Genre"><br /><br />
                    </div>
                    <div class='col-lg-2 '>
                        <label>Neutre : </label><br />
                        <input type="radio" Value="Neutre" name="ControleFestivaliers.Genre">
                    </div>
                    <div class='col-lg-6 '>
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.ControleFestivaliers.Genre, "", new { @class = "text-danger" })<br /><br />

                <label>Téléphone : </label><br />
                <input type="tel" pattern="[0-9]{10}" required class="form-control" name="ControleFestivaliers.Telephone">
                @Html.ValidationMessageFor(model => model.ControleFestivaliers.Telephone, "", new { @class = "text-danger" })<br /><br />

                <div class="row">
                    <div class='col-lg-6 '>
                        <label>Code postal : </label><br />
                        <input type="tel" pattern="[0-9]{5}" required class="form-control" name="ControleFestivaliers.CodePostal">
                        @Html.ValidationMessageFor(model => model.ControleFestivaliers.CodePostal, "", new { @class = "text-danger" })<br /><br />
                    </div>
                    <div class='col-lg-6 '>
                        <label>Ville : </label><br />
                        <input type="text" required class="form-control" name="ControleFestivaliers.Ville">
                        @Html.ValidationMessageFor(model => model.ControleFestivaliers.Ville, "", new { @class = "text-danger" })<br /><br />
                    </div>
                </div>

                <div class="row">
                    <div class='col-lg-6 '>
                        <label>Rue : </label><br />
                        <input type="text" required class="form-control" name="ControleFestivaliers.Rue">
                        @Html.ValidationMessageFor(model => model.ControleFestivaliers.Rue, "", new { @class = "text-danger" })<br /><br />
                    </div>
                    <div class='col-lg-6 '>
                        <label>Pays : </label><br />
                        <input type="text" required class="form-control" name="ControleFestivaliers.Pays">
                        @Html.ValidationMessageFor(model => model.ControleFestivaliers.Pays, "", new { @class = "text-danger" })<br /><br />
                    </div>
                </div>
                <br />

                <div class="row">
                    <div class='col-lg-6 '>
                        <label>Festival : </label><br />
                        <select required class="form-control" name="ControleFestivaliers.FestivalId">
                            @{
                                int a = 0;
                                foreach (var i in Model.Festivals)
                                {
                                    <option value="@i.Id">@i.Nom</option>
                                    a = i.Id;
                                }
                            }
                        </select>
                        @Html.ValidationMessageFor(model => model.ControleFestivaliers.FestivalId, "", new { @class = "text-danger" })<br /><br />
                    </div>
                    <div class='col-lg-6 '>

                        <br /><br />
                    </div>
                </div>
                <br />

                <input type="submit" value="Envoyer" class="btn btn-primary" />
            </div>

            <div class='col-lg-2 '>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
